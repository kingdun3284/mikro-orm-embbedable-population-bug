{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "preserveWatchOutput": true,
    "strictPropertyInitialization": false,
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "useDefineForClassFields": false,
    "rootDir": "src",
    "skipLibCheck": true,
    "lib": ["es2017", "dom"]
  },
  "include": ["src/**/*.ts"]
}
